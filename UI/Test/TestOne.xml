<div max="1,1" min="0,0">
	<button image="Background" min="0.5,0.8" max="1,1" onClick="UpdateDialog" renderMode="Sliced">
		<text size="40" font="Arial" min="0,0" max="1,1">Open</text>
	</button>
	<div id="panel" min="0,0.75" max="1,1" image="Background" color="red" show="ShowDialog">
		<button image="Background" min="0.5,0.25" max="1,1" onClick="UpdateDialog" renderMode="Sliced">
			<text size="40" font="Arial" min="0,0" max="1,1">Close</text>
		</button>
	</div>
	<div id="image" min="0,0" max="0.75,0.75" bindImage="Image" renderMode="Sliced">
		<slider 
		min="0,0.8" 
		max="0.5,0.9" 
		image="Background"
		color="Red"
		renderMode="Sliced" 
		bind="SliderValue"/>
		
		<text size="12" font="Arial" color="#5831BD" min="0,0" max="1,1" bind="Name">this is my test</text>
		<button image="Background" min="0.5,0.8" max="1,1" onClick="Random" renderMode="Sliced">
			<text size="40" font="Arial" min="0,0" max="1,1">Random</text>
		</button>
	</div>
	<div foreach="Test" id="repeat" min="0,0" max="0.75,0.75">
		<text size="15" font="Arial" color="black" min="0,0" max="1,0.1" bind="value"></text>
	</div>
</div>